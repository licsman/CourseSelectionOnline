<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog classpath:liquibase/dbchangelog-3.6.xsd">

    <changeSet author="Azure" id="20210226-01">
        <createTable tableName="system_admin">
            <column autoIncrement="true" name="admin_id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="admin_account" remarks="管理员账号" type="VARCHAR(255)" />
            <column name="admin_password" remarks="管理员密码" type="VARCHAR(512)" />
            <column name="admin_name" remarks="管理员姓名" type="VARCHAR(512)" />
            <column name="description" remarks="管理员备注" type="VARCHAR(2000)" />
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="admin_create_time"
                    remarks="管理员创建时间" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="admin_update_time"
                    remarks="管理员信息更新时间" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="admin_phone" remarks="管理员手机号" type="VARCHAR(255)" />
            <column name="admin_gender" remarks="管理员性别" type="INT" />
            <column name="admin_thumb" remarks="管理员头像" type="VARCHAR(2000)" />
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_ci" />
        </modifySql>
    </changeSet>

</databaseChangeLog>
